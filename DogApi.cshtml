<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dog API Webpage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }

        .menu {
            margin-bottom: 20px;
        }

        .dog-image {
            max-width: 100%;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Welcome to the Dog API Webpage!</h1>

        <div class="menu">
            <button onclick="getRandomDogImage()">Get Random Dog Image</button>
        </div>

        <div id="dogImageContainer"></div>

        <script>
            async function getRandomDogImage() {
                try {
                    const response = await fetch('/api/randomdog'); // API endpoint provided by your C# application
                    const data = await response.json();
                    const imageUrl = data.message;

                    const dogImageContainer = document.getElementById('dogImageContainer');
                    dogImageContainer.innerHTML = `<img class="dog-image" src="${imageUrl}" alt="Random Dog">`;
                } catch (error) {
                    console.error('Error fetching dog image:', error);
                }
            }
        </script>
    </div>
</body>

</html>
